{
  "manifest_version": 3,
  "name": "Wist - Wishlist & Price Tracker",
  "version": "0.1.0",
  "description": "Save items, track prices, and build your wishlist.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.wist.app/*",
    "https://wishlist.nuvio.cloud/*",
    "*://*.amazon.com/*",
    "*://*.target.com/*",
    "*://*.etsy.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
